{% extends 'base.html.twig' %}

{% block title %}Performance{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="d-flex justify-content-center mt-5">

                {% for performance in performances %}
                <div class="col-4 d-flex justify-content-center">
                    <div class="card-body card-perf">
                        <h1 class="d-flex justify-content-center">{{ performance.title }}</h1>
                        <p>{{ performance.texte }}</p>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
