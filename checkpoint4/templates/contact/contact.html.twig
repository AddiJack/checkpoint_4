{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center">
    <div class="row">
        <div class="col-12">
            <h1>Contact Us</h1>
        </div>
    </div>
</div>

    <div class="container px-5">
        {{ form_start(form) }}

        <div class="form-row m-0">
            <div class="form-group col-md-6">
                {{ form_row(form.nom, {label_attr: {class: 'contact'} }) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.prenom, {label_attr: {class: 'contact'} }) }}
            </div>
        </div>
        <div class="form-row m-0">
            <div class="form-group col-md-6">
                {{ form_row(form.tel, {label_attr: {class: 'contact'} }) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.mail, {label_attr: {class: 'contact'} }) }}
            </div>
        </div>

        <div class="form-row m-0">
            <div class="form-group col-md-12">
                {{ form_row(form.message, {label_attr: {class: 'contact'} }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mb-3 d-flex justify-content-end ">
                <button class="btn btn-info" type="submit">{{ button_label|default('Envoyer') }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
